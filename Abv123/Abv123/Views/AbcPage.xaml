<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Abv123.Views.AbcPage" 
             Title="Буквы">

    <Grid x:Name="mainGrid" HorizontalOptions="CenterAndExpand">
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Label x:Name="numLbl" Text="Числа >>" TextColor="WhiteSmoke" HorizontalOptions="End" Margin="0,0,5,0" FontAttributes="Bold" FontSize="10"/>
                <Label x:Name="abcLbl" Text="Буквы" TextColor="WhiteSmoke" HorizontalOptions="CenterAndExpand"  FontAttributes="Bold"/>
            </StackLayout>
            <ScrollView SizeChanged="ContentPage_SizeChanged" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                <FlexLayout x:Name="abc" Wrap="Wrap"  VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"/>
            </ScrollView>

        </StackLayout>
    </Grid>
</ContentPage>